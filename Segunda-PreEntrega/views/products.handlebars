<div class='row'>

    <div class='col-md-8'>
        <table class='table'>
            <thead>
                <tr>
                    <th scope='col'>ID</th>
                    <th scope='col'>Title</th>
                    <th scope='col'>Description</th>
                    <th scope='col'>Price</th>
                    <th scope='col'>Code</th>
                    <th scope='col'>thumbail</th>
                    <th scope='col'>Stock</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope='row'>{{this._id}}</th>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.thumbail}}</td>
                    <td>{{this.stock}}</td>
                </tr>
