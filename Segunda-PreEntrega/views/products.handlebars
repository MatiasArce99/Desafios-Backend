                    <input type='text' class='form-control' placeholder='Precio' aria-label='Precio' name='price' />
                </div>
                <div class='col-6'>
                    <input type='text' class='form-control' placeholder='C贸digo'
                        aria-label='C贸digo' name='code' />
                </div>
                <div class='col-6'>
                    <input type='text' class='form-control' placeholder='Imagen'
                        aria-label='Imagen' name='thumbail' />
                </div>
                <div class='col-6'>
                    <input type='text' class='form-control' placeholder='Stock'
                        aria-label='Stock' name='stock' />
                </div>
                <div class='col-12'>
                    <button type='submit' class='form-control'>
                        Agregar
                    </button>
                </div>
            </div>
        </form>
    </div>

</div>
</div>