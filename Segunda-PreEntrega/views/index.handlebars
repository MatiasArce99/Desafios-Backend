<!-- Agregando Tabla -->
<div class='container'>
    <div class='row'>

        <div class='col-12'>
            <table class='table'>
                <thead>
                    <tr>
                        <th scope='col'>ID</th>
                        <th scope='col'>Title</th>
                        <th scope="col">Description</th>
                        <th scope='col'>Price</th>
                        <th scope='col'>Thumbail</th>
                        <th scope='col'>Code</th>
                        <th scope='col'>Stock</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each docs}} <!--docs es por la paginaciÃ³n-->
                    <tr>
                        <th scope='row'>{{this._id}}</th>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.thumbail}}</td>
                        <td>{{this.code}}</td>
                        <td>{{this.stock}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{#each docs}}
        <div class="col-md-3">
            <div class="card">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Title:</b> {{this.title}}</li>
                    <li class="list-group-item"><b>Description:</b> {{this.description}}</li>
                    <li class="list-group-item"><b>Price:</b> {{this.price}}</li>
                    <li class="list-group-item"><b>Thumbail:</b> {{this.thumbail}}</li>
                    <li class="list-group-item"><b>Code:</b> {{this.code}}</li>
                    <li class="list-group-item"><b>Stock:</b> {{this.stock}}</li>
                </ul>
            </div>
        </div>
        {{/each}}

